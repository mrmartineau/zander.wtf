{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "previewPath": "'blog'",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "subtitle",
          "type": "string",
          "single": true
        },
        {
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        },
        {
          "name": "modified",
          "type": "datetime",
          "default": "{{now}}",
          "isModifiedDate": true
        },
        {
          "name": "opengraphImage",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "name": "tags",
          "type": "tags"
        }
      ]
    },
    {
      "name": "worklog",
      "previewPath": "'worklog'",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "name": "title",
          "type": "string",
          "single": true,
          "required": true
        },
        {
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "required": true
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:6789",
  "frontMatter.content.pageFolders": [
    {
      "title": "worklog",
      "path": "[[workspace]]/src/content/worklog",
      "contentTypes": [
        "worklog"
      ]
    },
    {
      "title": "pages",
      "path": "[[workspace]]/src/pages"
    },
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog",
      "contentTypes": [
        "blog"
      ]
    }
  ],
  "frontMatter.website.host": "https://zander.wtf",
  "frontMatter.framework.startCommand": "pnpm run dev",
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  },
  "frontMatter.git.enabled": true
}