<section class="zm-block zm-movies">
  <header>
    <h3 class="zm-block-title">üçø Recently watched</h3>
  </header>

  <div class="zm-movies-list">
    {% for item in collections.movies %}
    <a
      class="zm-movie-item zm-movie-item--{{ loop.index }}"
      href="{{ item.uri }}"
    >
      <img
        src="{{ item.film.image.large }}"
        alt="{{ item.film.title }}"
        class="zm-movie-image"
      />
      <div class="zm-movie-info">
        <div>{{ item.rating.text }}</div>
      </div>
    </a>
    {% endfor %}
  </div>
  <a
    href="https://letterboxd.com/mrmartineau/films/diary/"
    class="zm-block-link"
    >View all ‚Üí</a
  >
</section>
