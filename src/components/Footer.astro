---
import { SITE_FOOTER_ITEMS } from '../consts';
import BigName from './BigName.astro';
import Status from '~/components/Status.astro';

const today = new Date();
---

<footer class="zm-contentContainer">
  <Status />
  <div class="grid gap-l">
    <nav class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-2xs">
      {
        SITE_FOOTER_ITEMS.map((item) => {
          return (
            <a href={item.url} rel={item.rel}>
              {item.icon ? (
                <>
                  <i class={`ph-duotone ${item.icon}`} />{' '}
                </>
              ) : null}
              {item.text}
              {item.external ? <i class="ph-duotone ph-arrow-up-right" /> : null}
            </a>
          );
        })
      }
    </nav>
    <div>
      <p>
        &copy; {today.getFullYear()} Zander Martineau â€¢ <a
          href={`https://github.com/mrmartineau/zander.wtf/commit/${__COMMIT_HASH__}`}
          class="commit-hash"
        >#{__COMMIT_HASH__}</a> â€¢ This site is always under construction. ðŸš§
      </p>
    </div>
  </div>
</footer>

<BigName orientation="top" class="mt-l" />

<style lang="postcss">
  footer {
    padding: var(--space-xl) 0;
  }

  .commit-hash {
    font-family: var(--font-mono);
  }
</style>
